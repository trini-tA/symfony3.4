{% extends 'base.html.twig' %}

{% block body %}
    <section class="jumbotron text-center">
    <div class="container">
      <h1>Todo's example</h1>
      <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
      <p>
        <a href="{{ path( 'todo.create') }}" class="btn btn-primary my-2">Create new todo</a>
        <a href="{{ path( 'todo.export') }}" class="btn btn-secondary my-2" target="_blank">Export todo</a>
      </p>
    </div>
  </section>

  <div class="todo py-5 bg-light">
    <div class="container">

      {% include "default/includes/flash-messages.html.twig" %}
     
      <div class="row">
        {% for todo in todos %}
          <div id="todo-{{ todo.id }}" class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

              <div class="card-body">
                <p class="card-title">{{ todo.title }}</p>
                <p class="card-text">{{ todo.description }}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a href="{{ path( 'todo.edit', {'id': todo.id }) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a href="{{ path( 'todo.delete', {'id': todo.id }) }}" data-id="{{ todo.id }}" class="btn btn-sm btn-outline-secondary todo-delete">Delete</a>
                  </div>
                  <small class="text-muted">{{ todo.updatedAt|date("d/m/Y H:i") }}</small>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
